<Window x:Class="KlinikaGUI.UsunWizytaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KlinikaGUI"
        mc:Ignorable="d"
        Height="540" Width="820"
        WindowStartupLocation="CenterScreen">
    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="LightBlue" Offset="0"/>
            <GradientStop Color="LightGray" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid>
        <Label Content="Usuń wizytę" HorizontalAlignment="Center" Height="60" Margin="0,10,0,0" VerticalAlignment="Top" Width="780" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontSize="30"/>
        <ListBox Name="ListaWizytyUsun" HorizontalAlignment="Left" Height="300" Margin="10,75,0,0" VerticalAlignment="Top" Width="780" FontSize="20" Background="AliceBlue"/>
        <Button x:Name="Wroc" Content="Wróć" HorizontalAlignment="Left" Height="60" Margin="10,380,0,0" VerticalAlignment="Top" Width="350" Click="WrocUsunWizyta" FontSize="24" Background="AliceBlue"/>
        <Button x:Name="Usun" Content="Usuń" HorizontalAlignment="Left" Height="60" Margin="575,380,0,0" VerticalAlignment="Top" Width="215" Click="UsunUsunWizyta" FontSize="24" Background="AliceBlue"/>
        <Image Margin="369,380,252,10" Source="/Obrazy/minus.png" Stretch="Uniform"/>

    </Grid>
</Window>
